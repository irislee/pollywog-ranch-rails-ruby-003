<h1>Create a new tadpole for <%= @frog.name %></h1>

<%= form_for(@tadpole) do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">  
    <%= f.hidden_field :color, :value => @frog.color %>
  </div>

  <div class="field">
    <%= f.hidden_field :frog_id, :value => @frog.id %>
  </div>

  <div class="actions">
    <%= f.submit "Create" %>
  </div>

<% end %>

<%= link_to 'Cancel', @tadpole %>